@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="styles.css"> 

<div class="container mt-5">   
    <div class="row">
        <div class="col-12">            
            <div class="card bg-info text-white shadow-sm">
                <img src="/images/fondo.jpg" alt="Swimming School Banner" class="card-img-top rounded">
                <div class="card-body text-center">
                    <h1 class="display-4">Welcome to Smith Swimming School</h1>
                    <p class="lead">Dive into excellence with our professional swim classes, competitive training, and safety courses!</p>
                    <a href="/classes" class="btn btn-primary btn-lg mt-3">Get Started</a>
                </div>
            </div>
        </div>
    </div>

   
    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <img src="/images/nadador9.webp" alt="Swim Classes Icon" class="img-fluid mb-3" style="max-height: 100px;">
                    <h3>Swim Classes</h3>
                    <p>Learn to swim with our classes for all ages and skill levels.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <img src="/images/nadador8.webp" alt="Competitive Training Icon" class="img-fluid mb-3" style="max-height: 100px;">
                    <h3>Competitive Training</h3>
                    <p>Take your skills to the next level with our expert training programs.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <img src="/images/nadador7.webp" alt="Safety Courses Icon" class="img-fluid mb-3" style="max-height: 100px;">
                    <h3>Safety Courses</h3>
                    <p>Stay safe in the water with our certified safety training.</p>
                </div>
            </div>
        </div>
    </div>
</div>