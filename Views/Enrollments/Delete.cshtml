@model SmithSwimmingSchoolApp.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card w-50">
        <div class="card-header text-center bg-danger text-white">
            Delete Enrollment
        </div>
        <div class="card-body">
            <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Course)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Course!.Id)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Swimmer)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Swimmer!.Id)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Grouping)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Grouping!.Id)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </form>
        </div>
    </div>
</div>
