@model SmithSwimmingSchoolApp.Models.Coach

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card w-50">
        <div class="card-header text-center bg-primary text-white">
            Edit Coach
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdentityUserId" class="control-label"></label>
                    <input asp-for="IdentityUserId" class="form-control" readonly />
                    <span asp-validation-for="IdentityUserId" class="text-danger"></span>
                </div>

                @{
                    var coachSexOptions = (IEnumerable<SelectListItem>)ViewData["CoachSexOptions"];
                }

                <div class="form-group">
                    <label asp-for="CoachSex" class="control-label"></label>
                    <select asp-for="CoachSex" class="form-control" asp-items="coachSexOptions"></select>
                    <span asp-validation-for="CoachSex" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save Changes" class="btn btn-primary mt-3" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-dark">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
