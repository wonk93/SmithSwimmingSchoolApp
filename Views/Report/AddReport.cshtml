@model SmithSwimmingSchoolApp.Models.Report

@{
    ViewData["Title"] = "Add Report";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <form asp-action="AddReport" method="post">
        <input type="hidden" asp-for="EnrollmentId" />

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Report Content</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Report</button>
        <a asp-action="Index" asp-route-id="@ViewData["id"]" class="btn btn-secondary">Back to Reports</a>
    </form>
</div>